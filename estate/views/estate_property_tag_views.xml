<?xml version="1.0"?>
<odoo>
    <record id="estate_model_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">est.estates.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- form view -->
    <record id="estate_model_tag_form" model="ir.ui.view">
        <field name="name">estate.model.tag.form</field>
        <field name="model">est.estates.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Unknown"/>
                        </h1>
                    </div>
               </sheet>
            </form>
        </field>
    </record>

    <!-- search form -->
    <record id="estate_model_tag_form_filter" model="ir.ui.view">
        <field name="name">estate.select</field>
        <field name="model">est.estates.property.tag</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
            </search>
        </field>
    </record>

</odoo>
