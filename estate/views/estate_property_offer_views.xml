<?xml version="1.0"?>
<odoo>
    <!-- list view -->
    <record id="estate_model_offer_tree" model="ir.ui.view">
        <field name="name">estate.model.offer_tree</field>
        <field name="model">est.estates.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_property_offer_accept" type="object" string="Accept" icon="fa-check"/>
                <button name="action_property_offer_refuse" type="object" string="Refuse" icon="fa-times"/>
                <field name ="status"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_model_offer_form" model="ir.ui.view">
        <field name="name">estate.model.offer.form</field>
        <field name="model">est.estates.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="status"/>
                        </group>
                    </group>
               </sheet>
            </form>
        </field>
    </record>
</odoo>